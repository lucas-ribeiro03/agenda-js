<%- include('includes/head');%>
<%- include ('includes/navbar');%>


<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

      <%- include ('includes/messages') %>

      <div class="row">
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label for="exampleInputEmail1" class="form-label">Seu email</label>
              <input type="email" class="form-control" name="email" style="width: 45%;">
            <div class="form-group">
              <label for="exampleInputPassword1" class="form-label">Senha</label>
              <input type="password" class="form-control" name="senha" style="width: 45%;">
            <button type="submit" class="btn btn-primary my-3">Cadastrar</button>
          </form>
        </div>


        <div class="col-lg">
          <h4>Fazer login</h4>
          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label for="exampleInputEmail1" class="form-label">Seu email</label>
              <input type="email" class="form-control" name="email" style="width: 45%;">
            <div class="form-group">
              <label for="exampleInputPassword1" class="form-label">Senha</label>
              <input type="password" class="form-control" name="senha" style="width: 45%;">
            <button type="submit" class="btn btn-primary my-3">Fazer Login</button>
          </form>
        </div>
      </div>
    <div class="col-lg-2"></div>
  </div>
</div>


<%- include('includes/footer');%>
 